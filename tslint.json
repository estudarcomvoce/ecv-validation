{
  "project": "tsconfig.json",
  "extends": [
    "tslint-config-airbnb",
    "tslint-config-prettier"
  ],
  "rules": {
    "import-name": false,
    "no-var-self": false,
    "strict-boolean-expressions": [
      true,
      "allow-null-union",
      "allow-undefined-union",
      "allow-string"
    ],
    "max-line-length": [true, 150],
    "ordered-imports": false,
    "variable-name": false
  }
}